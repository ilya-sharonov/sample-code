{
    "name": "core-activity",
    "version": "0.0.1",
    "description": "Core Activity service",
    "main": "index.js",
    "scripts": {
        "start:dev": "npx nodemon",
        "start:msg": "npx ts-node src/messaging/service/index.ts",
        "build": "npx rimraf ./build && tsc",
        "start": "npm run build && node build/index.js",
        "test": "npx jest",
        "lint": "npx eslint src/**/*.ts",
        "format": "npx eslint src/**/*.ts --fix",
        "gen_jwt": "npx ts-node src/util/generate_jwt.ts",
        "gen_id": "npx ts-node src/util/generate_id.ts",
        "kafka_debug": "npx nodemon --config nodemon-kafka-debug.json",
        "build:prod": "npx tsc --project tsconfig-prod.json",
        "docker:backend": "docker build -t app-backend -f docker/app.Dockerfile .",
        "docker:messaging": "docker build -t app-messaging-service -f docker/messaging.Dockerfile .",
        "docker:proxy": "docker build -t app-proxy -f docker/proxy.Dockerfile .",
        "docker:setup": "docker build -t app-setup -f docker/setup.Dockerfile ."
    },
    "keywords": [
        "core",
        "activity"
    ],
    "author": "Ilya Sharonov",
    "license": "ISC",
    "dependencies": {
        "@hapi/boom": "^10.0.1",
        "@hapi/hapi": "^21.3.2",
        "@hapi/jwt": "^3.2.0",
        "dotenv": "^16.1.4",
        "gtoken": "^7.0.1",
        "hapi-pino": "^12.1.0",
        "joi": "^17.11.0",
        "kafkajs": "^2.2.4",
        "mongodb": "^5.6.0",
        "neo4j-driver": "^5.10.0",
        "pg": "^8.11.3",
        "pino": "^8.17.2",
        "redis": "^4.6.7",
        "typeconv": "^2.3.1",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.22.1",
        "@babel/preset-env": "^7.22.2",
        "@babel/preset-typescript": "^7.21.5",
        "@types/jest": "^29.5.1",
        "@types/pg": "^8.10.9",
        "@typescript-eslint/eslint-plugin": "^5.59.7",
        "@typescript-eslint/parser": "^5.59.7",
        "babel-jest": "^29.5.0",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "pino-pretty": "^10.3.1",
        "prettier": "^2.8.8",
        "rimraf": "^5.0.1",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    }
}
